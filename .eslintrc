{
  "extends": "airbnb-base/legacy",
  "rules": {
    "strict": [2, "global"],
    "func-names": 0,
    "max-len": [2, 200, 2, {
      "ignoreUrls": true,
      "ignoreComments": true
    }],
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-param-reassign": 0,
    "radix": [2, "as-needed"],
    "new-cap": [2, { "newIsCap": true, "capIsNew": false }],
    "key-spacing": [0, {"align": "colon", "beforeColon": false, "afterColon": true, "mode": "minimum"}], // can't find right config
    "no-cond-assign": [2, "except-parens"],
    "quote-props": [2, "consistent-as-needed"],
    "newline-per-chained-call": 0,
    "consistent-return": 0,
    "no-console": 0,
    "no-else-return": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "comma-dangle": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": false,
    "mocha": true
  }
}
